<div class="container">
  <h2 class="title">Вход</h2>

  <div class="mt">
    <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
      <p><%= form.label :user_email, 'Ваш email'%></p>
      <p><%= form.text_field :user_email, class: 'form-text-field form-text-field-login'%></p>

      <p class="mt"><%= form.label :password_digest, 'Пароль'%></p>
      <p><%= form.password_field :password_digest, class: 'form-text-field form-text-field-login'%></p>

      <p class="mt-lg">
        <%= form.submit 'Войти', class: 'button button-main'%> 
        <%= link_to "Зарегистрироваться", new_user_path, class: 'button-no-border' %>
      </p>
    <% end %>
  </div>
</div>