<div class="container">
  <h2 class="title">Редактирование расчета бюджета</h2>

  <% if @calculation.errors.any? %>
    <div class="mt">
      <% @calculation.errors.full_messages.each do |message| %>
        <p class="mb-sm text-red"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="mt">
    <%= form_with model: @calculation, data: {turbo: false} do |form|%>
      <p><%= form.label :title, 'Название'%></p>
      <p><%= form.text_field :title, class: 'form-text-field'%></p>

      <p class="mt-lg"><%= form.submit 'Редактировать!', class: 'button-button-main'%> 
    <% end %>
  </div>

  <p><%= link_to "Все расчеты", calculations_path %></p>
</div>
